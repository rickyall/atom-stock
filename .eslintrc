{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"],
        "operator-linebreak": ["error", "after"]
    },
     "globals": {
        "atom": true,
        "describe": true,
        "beforeEach": true,
        "it": true,
        "expect": true,
        "waitsForPromise": true,
        "runs": true,
        "jasmine": true,
        "HTMLDivElement": true
    }
}
